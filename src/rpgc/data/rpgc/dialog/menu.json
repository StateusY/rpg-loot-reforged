{
  "type": "minecraft:multi_action",
  "title": {
    "text": "RPGC Menu",
    "color": "blue"
  },
  "external_title": "Rpgc",
  "body": [
    {
      "type": "minecraft:plain_message",
      "contents": {
        "text": "Thank you for using RPGC Reforged!"
      }
    },
    {
      "type": "minecraft:plain_message",
      "contents": "This version is in very early development, so expect issues.",
      "width": 250
    },
    {
      "type": "minecraft:plain_message",
      "contents": [
        {
          "text": "Please report issues on "
        },
        {
          "text": "Github",
          "color": "#9999ff",
          "underlined": true,
          "click_event": {
            "action": "open_url",
            "url": "https://github.com/StateusY/rpg-loot-reforged/issues"
          },
          "hover_event": {
            "action": "show_text",
            "value": "https://github.com/StateusY/rpg-loot-reforged/issues"
          }
        },
        "!"
      ]
    },
    {
      "type": "minecraft:plain_message",
      "contents": [
        {
          "text": "RPGC Reforged v0.3\nConfig version 1\n",
          "color": "gray"
        },
        {
          "text": "indev",
          "color": "gold"
        }
      ],
      "width": 1000
    }
  ],
  "inputs": [],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "columns": 3,
  "actions": [
    {
      "label": "Player Menu",
      "tooltip": {
        "text": "Stats, *add rest later*",
        "color": "gray"
      },
      "width": 100,
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": "rpgc:player"
      }
    },
    {
      "label": "Admin Menu",
      "tooltip": {
        "text": "Admin Only",
        "color": "red"
      },
      "width": 100,
      "action": {
        "type": "minecraft:run_command",
        "command": "dialog show @s rpgc:admin"
      }
    }
  ]
}